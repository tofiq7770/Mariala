@model UpdatePositionVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
                            </div>
                            <button type="submit"  class="btn btn-primary me-2">Submit</button>
                            <button asp-action="index" asp-controller="position" class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
